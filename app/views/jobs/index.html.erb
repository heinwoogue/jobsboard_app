<div class="panel panel-primary">
  <div class="panel-heading ">
    <center>
      <h1><b>Jobs Board</b></h1>
    </center>
  </div>
</div>

<p><%= link_to "+ Add Job", new_job_path, class: "btn btn-success" %></p>

<center>
  <p><%= paginate @jobs %></p>
</center>

<% @jobs.each_with_index do |job, index| %>
  	<div class="panel panel-primary">
  		<div class="panel-heading ">
  			<h4><%= index+1 %>. <b><%= job.title %></b></h4>
  		</div>
  		<div class="panel-body">
  			<table>
  				<tr>
  					<td><b>Company: </b></td>
  					<td>&nbsp <%= job.company %></td>
  				</tr>
  				<tr>
  					<td><b>Job link: </b></td>
  					<td>&nbsp <%= link_to job.url, job.url %></td>
  				</tr>
  			</table>
  		</div>
	</div>
<% end %>

<center>
  <p><%= paginate @jobs %></p>
</center>